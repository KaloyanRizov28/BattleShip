{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "*": ["*", "src/*"]
        },
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es6",
        "moduleResolution": "node",
        "target": "es5",
        "allowJs": true,
    },
    "include": [
        "./src/**/*" , "**/*.png"
    ],
    "exclude": [
        "node_modules"
    ]
}